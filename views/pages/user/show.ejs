<header>
  <a href="/users/register">Ajouter un Utilisateur</a>
  <a href="/users/edit/<%= user.id %>">Modifier</a>
</header>

<h1>Utilisateur</h1>
<img src="/users/<%= user.thumbnail %>" alt="<%= user.thumbnail %>">
<h3><%= user.firstName %> <%= user.lastName %></h3>
<p><%= user.role %></p>
<a href="/"><%= user.email %></a><br>
<span><%= user.phone %></span><br>
<span><%= user.sex %></span>
<address><%= user.address %></address>
<time datetime="<%= user.joinedAt %>"><%= user.joinedAt %></time>